datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./prisma-client"
}

generator zod {
  provider = "zod-prisma-types"
}

model Event {
  id                      String         @id @default(uuid())
  year                    Int            @db.Year
  registration_start_date DateTime
  vessel_types            VesselType[]
  registrations           Registration[]
}

model Participant {
  id              String       @id @default(uuid())
  first_name      String
  last_name       String
  date_of_birth   DateTime
  registration    Registration @relation(fields: [registration_id], references: [id])
  registration_id String
}

model Registrant {
  id             String         @id @default(uuid())
  first_name     String
  last_name      String
  email          String
  date_of_birth  DateTime
  postal_code    String
  street_name    String
  street_number  String
  city           String
  place_of_birth String
  registration   Registration[]
}

model Registration {
  id            String        @id @default(uuid())
  music_request String?
  registrant    Registrant    @relation(fields: [registrant_id], references: [id])
  registrant_id String
  participants  Participant[]
  vessel        Vessel        @relation(fields: [vessel_id], references: [id])
  vessel_id     String
  assosciation  String?
  event         Event         @relation(fields: [eventId], references: [id])
  eventId       String
}

model VesselType {
  id              String   @id @default(uuid())
  max_registrants Int      @default(2)
  type            String
  vessels         Vessel[]
  events          Event[]
}

model Vessel {
  id             String         @id @default(uuid())
  name           String
  type           VesselType     @relation(fields: [vessel_type_id], references: [id])
  vessel_type_id String
  registration   Registration[]
}
